<div class="w-full min-h-screen flex items-center justify-center bg-gray-50">
  <div class="w-full sm:max-w-md mx-4 sm:mx-auto">
    <div class="bg-white p-8 rounded-lg shadow-md">
      <h1 class="text-3xl font-bold text-center mb-8 text-gray-900">Log In</h1>

      <%= form_for(:session, url: login_path) do |f| %>
        <div class="space-y-6">
          <div>
            <%= f.label :email, class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.email_field :email, 
                class: "w-full rounded-md border border-gray-300 px-3 py-2 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none transition",
                placeholder: "you@example.com" %>
          </div>

          <div>
            <%= f.label :password, class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.password_field :password, 
                class: "w-full rounded-md border border-gray-300 px-3 py-2 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none transition" %>
          </div>

          <%= f.submit "Log in", 
              class: "w-full bg-blue-600 text-white py-2 px-4 rounded-md hover:bg-blue-700 transition duration-150 ease-in-out mt-6 font-medium" %>
        </div>
      <% end %>

      <p class="mt-6 text-center text-sm text-gray-600">
        New user? 
        <%= link_to "Sign up now!", signup_path, 
            class: "text-blue-600 hover:text-blue-500 font-medium" %>
      </p>
    </div>
  </div>
</div> 